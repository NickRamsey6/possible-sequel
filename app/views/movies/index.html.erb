<% content_for :showcase do %>
<div class="headline">
  <h2>Possible Sequel</h2>
</div>
<div class ="form">
  <%= form_for [@prompt, @post] do |f| %>
    <%= f.text_area :body, :value => nil %>
    <p><%= f.submit %></p>
  <% end %>
</div>
<div class="posts">
  <h3>Answers</h3>
   <% @answers.each do |answer| %>
    <p>"<%= answer["body"] %>"</p>
    <p>Vote</p>
   <% end %>
</div>
<% end %>

<% content_for :movie_one do %>
  <div class="top-box top-box-a">
    <%= image_tag @poster_one %>
    <h1>Title:</h1> <p><%= @title_one %></p>
    <h2>Actors:</h2> <p><%= @actors_one %></p>
    <h2>Plot:</h2> <p><%= @plot_one %></p>
  </div>
<% end %>


